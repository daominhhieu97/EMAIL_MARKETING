@model EMAIL_MARKETING_THESIS_PROJECT.Models.Campaigns.Template

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>@Model.Name</h4>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @Html.Raw(Model.Content)
        </div>
    </div>
</div>
<div>
    <a asp-action="GetTemplates" class="btn btn-info btn-sm"><i class="fa fa-arrow-left"></i>&nbsp;Back to List</a>
    <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#editTemplateTitle"><i class="fa fa-edit"></i>&nbsp;Edit Template Title</button>
</div>

@using (@Html.BeginForm("Edit", "Template", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <div id="editTemplateTitle" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Edit Template Title</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <p>Template Name: </p>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-default">Update</button>
                </div>
            </div>
        </div>
    </div>
}