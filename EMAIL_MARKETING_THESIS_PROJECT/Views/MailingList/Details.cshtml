@model EMAIL_MARKETING_THESIS_PROJECT.Views.ViewModels.MailingLists.MailingListDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Mailing List Details: @Model.MailingList.Title</h3>

<div>
    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#addContactModal">Add Contacts</button>
    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#segmentModal">Add Segments</button>
</div>

<br />

<table class="table">
    <thead class="thead-dark">
        <tr>
            <td>@Html.Label("Name")</td>
            <td>@Html.Label("Phone")</td>
            <td>@Html.Label("Email")</td>
            <td>@Html.Label("Age")</td>
            <td>@Html.Label("City")</td>
            <td>@Html.Label("Area")</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Subscribers)
        {
            <tr>
                <th scope="row">@item.Name</th>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>@item.Age</td>
                <td>@item.City</td>
                <td>@item.Area</td>
            </tr>
        }
    </tbody>
</table>

@using (@Html.BeginForm("AddSegment", "Segmentation", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.AddSegmentationViewModel.MailingListId)
    <div id="segmentModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add Segment</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Segmentation Name: </p>
                    @Html.TextBoxFor(m => m.AddSegmentationViewModel.NewName)

                    <hr />
                    <p>Choose category you want to segment</p>
                    @Html.DropDownListFor(m => m.AddSegmentationViewModel.CategoryType, new List<SelectListItem>
                        { new SelectListItem { Text = "Demographic", Value = "Demographic" }, new SelectListItem { Text = "Geographic", Value = "Geographic" }, new SelectListItem { Text = "Kmeans(RFM)", Value = "Kmeans" } })
                    <hr />
                    <div id="filtering-block">
                    </div>
                    <div id="kmeans-block">
                        <p>Please input the file:</p>
                        @Html.TextBox("file", "", new { type = "file" })

                        <hr />

                        <p>Choose subscriber rate class:</p>
                        @Html.DropDownListFor(m => m.AddSegmentationViewModel.SubscriberRateClass, new List<SelectListItem> { new SelectListItem { Text = "Champion", Value = "144" }, new SelectListItem { Text = "Inactive", Value = "111" }, new SelectListItem { Text = "Normal", Value = "222" } })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-default">Add Segment</button>
                </div>
            </div>
        </div>
    </div>
}