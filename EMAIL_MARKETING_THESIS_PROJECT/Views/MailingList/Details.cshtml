@model EMAIL_MARKETING_THESIS_PROJECT.ViewModels.MailingListDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#addContactModal">Add Contacts</button>
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#segmentModal">Add Segments</button>


<table>
    <tr>
        <td>@Html.Label("Name")</td>
        <td>@Html.Label("Phone")</td>
        <td>@Html.Label("Email")</td>
    </tr>
    @foreach (var item in Model.Subscribers)
    {
<tr>
    <td>@item.Name</td>
    <td>@item.Phone</td>
    <td>@item.Email</td>
</tr>
    }
</table>

<div id="segmentModal" class="modal fade" role="dialog">
    <div class="modal-dialog">        
    <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Segment</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>Choose category you want to segment</p>
                @Html.DropDownListFor(m => m.CategoryType, new List<SelectListItem> { new SelectListItem { Text = "Demographic", Value = "Demographic" }, new SelectListItem { Text = "Geographic", Value = "Geographic" }, new SelectListItem { Text = "Kmeans", Value = "Kmeans" } })
                <hr />
                <div id="filtering-block">
                    
                </div>
                <div id="kmeans-block">
                    <p>Please input the file:</p>
                    
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" asp-action="">Add Segment</button>
            </div>
        </div>

    </div>
</div>