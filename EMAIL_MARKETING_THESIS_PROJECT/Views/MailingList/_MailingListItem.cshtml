@model EMAIL_MARKETING_THESIS_PROJECT.Models.Campaigns.MailingList

<tr>
	<div class="well well-lg bg-light">
		<td>@Model.Title</td>
		<td>@Model.SubscribersLink.Count</td>
		<td>
			<a class="btn btn-info" asp-action="Edit" asp-controller="MailingList" asp-route-id="@Model.Id" data-toggle="modal" data-target="#editMailingList"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
			<a class="btn btn-info" asp-action="Details" asp-controller="MailingList" asp-route-id="@Model.Id"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
			<a class="btn btn-info" asp-action="Delete" asp-controller="MailingList" asp-route-id="@Model.Id"><i class="fa fa-trash" aria-hidden="true"></i></a>
		</td>
	</div>
</tr>

@using (Html.BeginForm("Edit", "MailingList", FormMethod.Post))
{
	@Html.HiddenFor(m => m.Id)
	<div class="modal fade" id="editMailingList" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Edit Mailing List</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<label>Mailing List Title:</label>
					<div class="form-group">
						@Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					<button type="submit" class="btn btn-primary">Save changes</button>
				</div>
			</div>
		</div>
	</div>
}