@model IEnumerable<EMAIL_MARKETING_THESIS_PROJECT.Models.Campaigns.Campaign>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>All Campaigns</h3>

<p>
    <a class="btn btn-info" asp-action="Create">New Campaign</a>
</p>

<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                Send Date
            </th>
            <th>
                Subject Line
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @Html.Partial("_CampaignItem", item)
        }
    </tbody>
</table>